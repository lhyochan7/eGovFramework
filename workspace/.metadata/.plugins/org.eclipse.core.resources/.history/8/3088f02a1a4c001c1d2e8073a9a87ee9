<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>Insert title here</title>
<script src="https://code.jquery.com/jquery-3.4.1.js"></script>
<script type="text/javascript">
	 $(document).ready(function(){
		$('form').submit(function(){
			var valueById=$('#name').val();
			var valueByAge=$('#age').val();
			var valueByGender=$('input[name="gender"]:checked').val();
			var valueByHobby='';
			
			$('input[name="check"]:checked').each(function(e){
				valueByHobby+=$(this).val();
			})
			alert('이름: ' + valueById+
					'\n나이: ' + valueByAge+
					'\n성별: ' + valueByGender+
					'\n취미: ' + valueByHobby);
		});
		
		$('#cancel').click(function(){
			$('#name').val('');
			$('#age').val('');
			$('input[type="radio"]:checked').prop("checked",false);
			$('input[type="checkbox"]:checked').prop("checked",false);
		});
	});

</script>
</head>
<body>
	<form action="/pro/test/ex02.jsp" method="post">
		<table border="2">
			<tr>
				<td><label for="name">이름</label></td>
				<td><input id="name" type="text" name="name"></td>
			</tr>
			
			<tr>
				<td>나이<td>
				<select name="age" id="age">
				<option value=0>선택해주세요</option>
				<%for(int i=0;i<=100;i++){ %>
					<option value=<%=i%>><%=i%></option>
				<%} %>
		</select>
			</tr>
			
			<tr>
				<td>성별</td>
				<td>
					<input id="man" type="radio" name="gender" value="남자">
					<label>남자</label>
					<input id="woman" type="radio" name="gender" value="여자">
					<label>여자</label>
				</td>
			</tr>
			
			<tr>
				<td>취미</td>
				<td>
					<input id="check" type="checkbox" name="check" value="운동">
					<label>운동</label>
					<input id="check" type="checkbox" name="check" value="바둑">
					<label>바둑</label>
					<input id="check" type="checkbox" name="check" value="등산">
					<label>등산</label>
					<input id="chekck" type="checkbox" name="check" value="게임">
					<label>게임</label>
				</td>
			</tr>
			<tr>
				<td><input id="sub" type="submit" value="전송"></td>
				<td><input id="cancel" type="button" value="취소"></td>
			</tr>
		</table>
	</form>
